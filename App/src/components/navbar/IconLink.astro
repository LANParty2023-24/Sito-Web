---
type Props = {
  destination_url: string;
  icon_url: string;
  icon_alt: string;
};

const { destination_url, icon_url, icon_alt } = Astro.props;
---

<a href={destination_url}>
  <img src={icon_url} alt={icon_alt} />
</a>

<style>
	a {
		height: var(--text-heading-large);
		/* outline: 1px solid yellow; */

		display: flex;
		justify-content: center;
		align-items: center;
	}

	a > img {
		height: 100%;
		/* height: 2.5rem; ~175px */
		aspect-ratio: 1 / 1;

		/* outline: 1px solid yellow; */
	}
</style>