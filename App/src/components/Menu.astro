<script>
    const menuBtn = document.getElementsByTagName("ion-icon")[0];
    menuBtn.addEventListener("click",()=>{
        let ul = document.getElementsByTagName("ul")[0];
        if(ul.classList.contains("invisible")){
            ul.classList.remove("invisible");
            menuBtn.setAttribute("name", "close-outline");
            //nascondi overflow(blocco dell'overflow, necessario per evitare utente che scrolla la pagina mentre il menu Ã¨ aperto)
            document.querySelector("body").style.overflowY = "hidden";
        }
            
        else{
            ul.classList.add("invisible");
            menuBtn.setAttribute("name", "menu-outline");
            document.querySelector("body").style.overflowY = "";
        }
    });

</script>
